<?xml version="1.0" encoding="UTF-8" ?>
<crud xmlns="http://www.cledaCrud.org/crud.xsd"
package="com.minotauro.sandbox.gui.mcrudpost" name="post" modelname="MCrudPost" group="NombreGrupoCruds" >

<description>
Este crud define un post en un blog.
</description>
	<!-- **************************************** -->
	<!-- Lista de Atributos del CRUD POST -->
	<!-- **************************************** -->
	<attributes>
		<att name="name" type="string" visibleOnList="true" editabletiOnList="true" filterByThis="true" editFieldType="TextField">
			<validator name="NotEmptyValidator" />
			<!-- ... -->
			
		</att>
		<att name="desc" type="string" visibleOnList="true" editabletiOnList="true" filterByThis="true" editFieldType="ETextAreaEx">
			<validator name="NotEmptyValidator" />
			<!-- ... -->
		</att>
		<att name="body" type="string" visibleOnList="true" editabletiOnList="true" filterByThis="true" editFieldType="ETextAreaEx">
			<validator name="NotEmptyValidator" />
			<!-- ... -->
		</att>
		<!-- ... -->
		
	</attributes>

	
	<!-- **************************************** -->
	<!-- Opciones de Menú, esto era para permitir especificar la ubicacion del nuevo CRUD POST (se hará con una plantilla) -->
